# AI-Powered Data Quality Monitor - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Optional - for future enhancements)
# =============================================================================

# OpenAI API Key (for future AI-powered insights and recommendations)
OPENAI_API_KEY=your_openai_api_key_here

# Other potential API integrations
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_AI_API_KEY=your_google_ai_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# DuckDB Database Path (default: data/dqm_database.duckdb)
DUCKDB_PATH=data/dqm_database.duckdb

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Dashboard Theme
DASHBOARD_THEME=light  # light or dark

# =============================================================================
# DATA PROCESSING CONFIGURATION
# =============================================================================

# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE_MB=100

# Default anomaly detection threshold
ANOMALY_THRESHOLD=0.1

# Default data quality score threshold
QUALITY_THRESHOLD=7.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/dqm.log

# =============================================================================
# SECURITY (for production deployments)
# =============================================================================

# Secret key for session management
SECRET_KEY=your_secret_key_here

# Enable/disable debug mode
DEBUG_MODE=False
